<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}ArcheoDB{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
        <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
        <!--<link href="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.css" rel="stylesheet" />
        <script src="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.js"></script>-->
    </head>
    <body>
        <div class="w-full flex">
            <div class="w-1/6 bg-gray-600 text-white h-screen">
                <div class="text-2xl font-bold p-4">ArcheoDB</div>
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <ul>
                    <li><a href="" class="block p-4">Hlavní stránka</a></li>
                    <li><a href="" class="block p-4">Nálezy</a></li>
                    <li><a href="" class="block p-4">Lokality</a></li>
                    <li><a href="" class="block p-4">Nastavení</a></li>
                </ul>
                {% endif %}
            </div>
            <div class="w-5/6 p-4 bg-gray-200 dark:bg-gray-800">
                {% for message in app.flashes('success') %}
                    <div class="bg-green-200 border-green-600 border-l-4 p-4 mb-4">{{ message }}</div>
                {% endfor %}
                {% for message in app.flashes('error') %}
                    <div class="bg-red-200 border-red-600 border-l-4 p-4 mb-4">{{ message }}</div>
                {% endfor %}
                {% block body %}{% endblock %}
            </div>
    </body>
</html>
