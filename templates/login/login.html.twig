{% extends 'base.html.twig' %}

{% block title %}ArcheoDB - příhlášení{% endblock %}

{% block body %}
<div class="w-1/3 mx-auto justify-center">
    <form method="post" class="p-4">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <div>
            <label class="block text-md">Uživatelské jméno</label>
            <input type="email" value="{{ last_username }}" name="_username" id="username" class="block w-full shadow-sm border-gray-300  rounded-md border p-2 mt-1 mb-2" autocomplete="email" required autofocus>
        </div>

        <div>
            <label class="block text-md">Heslo</label>
            <input type="password" name="_password" id="password" class="block w-full shadow-sm border-gray-300  rounded-md border p-2 mt-1 mb-2" autocomplete="current-password" required>
        </div>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <input type="checkbox" name="_remember_me" id="_remember_me">
                <label for="_remember_me">Remember me</label>
            </div>
        #}

        <div>
            <button type="submit" 
                class="block w-full shadow-sm border-transparent bg-green-600 hover:bg-green-700 text-white rounded-md border p-2 mt-4 mb-2">Příhlásit</button>
        </div>
    </form>
</div>
{% endblock %}
